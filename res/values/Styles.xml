<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="GradientLeft">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/stackable_gradient_left</item>
		<item name="android:textSize">15sp</item>
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:layout_weight">3</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:padding">5dip</item>
	</style>

	<style name="GradientRight" parent="@style/GradientLeft">
		<item name="android:background">@drawable/stackable_gradient_right</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>

</resources>
