<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="8 Note Chord Forms"
		android:textSize="20sp"
		/>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Major and Minor Sweep Patterns By Root and Position"
		android:textSize="10sp"
		android:gravity="right"
		/>
	<TextView
		android:id="@+id/name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="20dip"
		android:text="Press Start To Begin"
		/>
	<RelativeLayout
		android:id="@+id/fretsholder"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="15dip">
		<TextView
			android:layout_width="fill_parent"
			android:layout_marginTop="30dip"
			android:layout_marginLeft="130dip"
			android:layout_height="100dip"
			android:text="Fast"
			android:gravity="right"
			/>
		<TextView
			android:layout_width="fill_parent"
			android:layout_marginTop="30dip"
			android:layout_marginLeft="130dip"
			android:layout_height="100dip"
			android:text="Slow"
			android:gravity="left"
			/>
		<SeekBar
			android:id="@+id/speed"
			android:layout_marginTop="50dip"
			android:layout_marginLeft="130dip"
			android:layout_width="200dip"
			android:layout_height="20dip"
			/>
		<Button
			android:layout_marginTop="130dip"
			android:layout_marginLeft="130dip"
			android:layout_width="200dip"
			android:layout_height="120dip"
			android:text="Start"
			android:textSize="20sp"
			android:onClick="startStop"
			/>
	</RelativeLayout>
</LinearLayout>

